{
    "name": "anper/redis-collector",
    "type": "library",
    "description": "Redis collector for PHP debugbar.",
    "keywords": [
        "anper",
        "redis",
        "collector",
        "debugbar"
    ],
    "homepage": "https://github.com/perevoshchikov/redis-collector",
    "license": "MIT",
    "authors": [
        {
            "name": "Anton Perevoshchikov",
            "email": "anper3.5@gmail.com"
        }
    ],
    "require": {
        "php" : "~7.1",
        "kitchenu/slim-debugbar": "^1.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.2",
        "phpunit/php-code-coverage": "^6.0",
        "phpunit/phpunit": "^7.1",
        "predis/predis": "^1.1",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "suggest": {
        "predis/predis": "Flexible and feature-complete Redis client for PHP and HHVM"
    },
    "autoload": {
        "psr-4": {
            "Anper\\RedisCollector\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anper\\RedisCollector\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level=7",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
